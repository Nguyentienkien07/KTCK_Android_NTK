<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#569FD8"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="95dp"
        android:text="Stories"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="95dp"
        android:text="See all"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#569FD8"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvwelcom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Welcome Nguyễn Tiến Kiên"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="INSTABOOK"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_thongbao" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imgadd"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="135dp"
        android:background="@drawable/borderstr"
        android:padding="5dp"
        android:src="@drawable/ic_cong" />

    <TextView
        android:id="@+id/tvadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgadd"
        android:textColor="@color/white"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:text="Add Story" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgh1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="135dp"
        android:layout_toRightOf="@+id/imgadd"
        android:padding="5dp"
        android:src="@drawable/hinh2"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="#CFC6C6"
        app:strokeWidth="5dp" />

    <TextView
        android:id="@+id/tvduyhoang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgh1"
        android:layout_marginLeft="23dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/tvadd"
        android:text="Duy Hoàng" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgh2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="135dp"
        android:layout_toRightOf="@+id/imgh1"
        android:padding="5dp"
        android:src="@drawable/hinh3"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="#CFC6C6"
        app:strokeWidth="5dp" />

    <TextView
        android:id="@+id/tvluc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgh2"
        android:layout_marginLeft="25dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/tvduyhoang"
        android:text="Phước Lục" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgh3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="135dp"
        android:layout_toRightOf="@+id/imgh2"

        android:padding="5dp"
        android:src="@drawable/hinh4"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="#CFC6C6"
        app:strokeWidth="5dp" />

    <TextView
        android:id="@+id/tvthinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgh3"
        android:layout_marginLeft="25dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/tvluc"
        android:text="Viết Thịnh" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_news"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp" />




</RelativeLayout>